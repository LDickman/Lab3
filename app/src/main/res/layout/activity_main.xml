<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/word1"
        android:layout_width="128dp"
        android:layout_height="41dp"
        android:text="Plural Noun"
        app:layout_constraintBottom_toBottomOf="@+id/word7"
        app:layout_constraintEnd_toStartOf="@+id/editText_word2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.056" />

    <TextView
        android:id="@+id/word2"
        android:layout_width="123dp"
        android:layout_height="39dp"
        android:text="Noun"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/editText_word3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/word1"
        app:layout_constraintVertical_bias="0.048" />

    <TextView
        android:id="@+id/word3"
        android:layout_width="125dp"
        android:layout_height="37dp"
        android:text="Adjective"
        app:layout_constraintBottom_toTopOf="@+id/word4"
        app:layout_constraintEnd_toStartOf="@+id/editText_word4"
        app:layout_constraintHorizontal_bias="0.593"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/word2"
        app:layout_constraintVertical_bias="0.494" />

    <TextView
        android:id="@+id/word4"
        android:layout_width="118dp"
        android:layout_height="41dp"
        android:text="Noun"
        app:layout_constraintBottom_toBottomOf="@+id/word7"
        app:layout_constraintEnd_toStartOf="@+id/editText_word5"
        app:layout_constraintHorizontal_bias="0.589"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/word2"
        app:layout_constraintVertical_bias="0.314" />

    <TextView
        android:id="@+id/word5"
        android:layout_width="112dp"
        android:layout_height="42dp"
        android:text="Adverb"
        app:layout_constraintBottom_toTopOf="@+id/word6"
        app:layout_constraintEnd_toStartOf="@+id/editText_word6"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/word4"
        app:layout_constraintVertical_bias="0.403" />

    <TextView
        android:id="@+id/word6"
        android:layout_width="116dp"
        android:layout_height="40dp"
        android:text="Verb"
        app:layout_constraintBottom_toTopOf="@+id/word7"
        app:layout_constraintEnd_toStartOf="@+id/editText_word7"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/word4"
        app:layout_constraintVertical_bias="0.751" />

    <TextView
        android:id="@+id/word7"
        android:layout_width="122dp"
        android:layout_height="45dp"
        android:text="Noun"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.069"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.833" />

    <EditText
        android:id="@+id/editText_word1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Plural Noun"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/editText_word7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.77"
        app:layout_constraintStart_toStartOf="@+id/word1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/editText_word2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Noun"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/editText_word7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.75"
        app:layout_constraintStart_toStartOf="@+id/word2"
        app:layout_constraintTop_toBottomOf="@+id/editText_word1"
        app:layout_constraintVertical_bias="0.048" />

    <EditText
        android:id="@+id/editText_word3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Adjective"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/editText_word4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.758"
        app:layout_constraintStart_toStartOf="@+id/word3"
        app:layout_constraintTop_toBottomOf="@+id/editText_word1"
        app:layout_constraintVertical_bias="0.722" />

    <EditText
        android:id="@+id/editText_word4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Noun"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/editText_word7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.752"
        app:layout_constraintStart_toStartOf="@+id/word4"
        app:layout_constraintTop_toBottomOf="@+id/editText_word2"
        app:layout_constraintVertical_bias="0.317" />

    <EditText
        android:id="@+id/editText_word5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:hint="Adverd"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/editText_word6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.738"
        app:layout_constraintStart_toStartOf="@+id/word5"
        app:layout_constraintTop_toBottomOf="@+id/editText_word4"
        app:layout_constraintVertical_bias="0.173" />

    <EditText
        android:id="@+id/editText_word6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Verb"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/editText_word7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.75"
        app:layout_constraintStart_toStartOf="@+id/word6"
        app:layout_constraintTop_toBottomOf="@+id/editText_word4"
        app:layout_constraintVertical_bias="0.6" />

    <EditText
        android:id="@+id/editText_word7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Noun"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.756"
        app:layout_constraintStart_toStartOf="@+id/word7"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.833" />

    <Button
        android:id="@+id/submit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onSubmitClick"
        android:text="Submit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.445"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.931" />

</androidx.constraintlayout.widget.ConstraintLayout>